<div class="btm-line">
  <h1>Create a new <%= title %></h1>
</div>

<%= render 'shared/error_messages', option: option %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(option, url: path) do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name, class: "input_box form-control", placeholder: placeH %>

      <%= form.submit "Create new #{title}", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>