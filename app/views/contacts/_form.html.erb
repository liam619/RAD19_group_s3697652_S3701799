<%= form_for(@contact, url: contacts_path) do |form| %>
  <%= form.text_field :name, class: "input_box", placeholder: "Name" %>
  <%= form.email_field :email, placeholder: "Email", class: "input_box" %>
  <%= form.text_area :message, placeholder: "Message", size: "5x5", class: "input_box" %>
  <%= form.submit :Send, class: "btn btn-danger" %>
<% end %>